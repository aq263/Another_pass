<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:key="YAPM/pref:colored_passwords"
        app:title="Colorize showed passwords to improve readability"
        app:defaultValue="true"/>

    <SwitchPreferenceCompat
        app:key="YAPM/pref:password_words_on_nl"
        app:title="Show passwords on multiple line"
        app:defaultValue="false"/>

    <SwitchPreferenceCompat
        app:key="YAPM/pref:transparent_overlay"
        app:title="Transparent password overlay"
        app:defaultValue="true"/>

</PreferenceScreen>