<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:key="YAPM/pref:show_labels_in_list"
        app:title="Show labels in overview list"
        app:allowDividerBelow="true"
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:defaultValue="true"/>

    <SwitchPreferenceCompat
        app:key="YAPM/pref:colored_passwords"
        app:title="Colorize showed passwords to improve readability"
        app:allowDividerAbove="true"
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:defaultValue="true"/>

    <SwitchPreferenceCompat
        app:key="YAPM/pref:password_words_on_nl"
        app:title="Show passwords on multiple line"
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:defaultValue="false"/>

    <SwitchPreferenceCompat
        app:key="YAPM/pref:colorize_mp_qrcodes"
        app:title="Colorize master password QR codes"
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:allowDividerAbove="true"
        app:defaultValue="true"/>

</PreferenceScreen>