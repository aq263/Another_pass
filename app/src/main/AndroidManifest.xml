<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.jepfa.yapm">

    <application
        android:name=".ui.YapmApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YetAnotherPasswordManager">
        <activity android:name=".ui.credential.ShowCredentialActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".ui.credential.NewOrChangeCredentialActivity" />
        <activity android:name=".ui.createvault.CreateVaultActivity" />
        <activity
            android:name=".ui.credential.ListCredentialsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.YetAnotherPasswordManager.NoActionBar"></activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.YetAnotherPasswordManager.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.overlay.OverlayShowingService"
            android:exported="false" />
    </application>

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>